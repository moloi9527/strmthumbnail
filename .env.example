# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# 认证配置
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=emby123456
SESSION_EXPIRY=86400000

# 路径配置
TMP_DIR=/tmp/emby_thumb_temp
CACHE_FILE=./.video_cache.json
AUTH_CONFIG_FILE=./auth.json

# 并发配置
DEFAULT_CONCURRENCY=4
MAX_CONCURRENCY=8
MIN_CONCURRENCY=2

# 缓存配置
CACHE_SAVE_INTERVAL=300000
CACHE_MAX_AGE=2592000000

# 超时配置（毫秒）
FFPROBE_TIMEOUT=10000
FFMPEG_TIMEOUT=30000
CURL_TIMEOUT=20000
HTTP_TIMEOUT=8000

# 缩略图配置
THUMBNAIL_QUALITY=85
THUMBNAIL_FORMAT=jpg
MAX_THUMBNAIL_WIDTH=1920
MAX_THUMBNAIL_HEIGHT=1080
DEFAULT_THUMBNAIL_POSITION=middle

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# 安全配置
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
